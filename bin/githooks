#! /usr/bin/env ruby

$: << File.expand_path('../../lib', __FILE__)

require 'githooks/main'
require 'githooks/options_parser'

options_parser = Githooks::OptionsParser.new(ARGV)
_options = options_parser.parse

if ARGV.length < 1
  puts options_parser.usage
  exit 1
end

begin
  Githooks::Main.exec(*ARGV.dup)
rescue Githooks::AppError => e
  puts e.message
  exit 1
end
